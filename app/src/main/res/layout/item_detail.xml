<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F2F2F7"
        android:paddingBottom="15dp"
        >
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:elevation="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="100dp">

        <ImageView
            android:id="@+id/imaged"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_launcher_background" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/statusd"
        tools:text="Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#6E798C"
        android:layout_gravity="center_horizontal"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/named"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:layout_gravity="center_horizontal"
        tools:text="Name"/>

    <TextView
        android:id="@+id/speciesd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8E8E93"
        android:textSize="13sp"
        android:textAllCaps="true"
        android:layout_gravity="center_horizontal"
        tools:text="Species"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8E8E93"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:fontFamily="sans-serif"
        android:text="Informations"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:text="Gender"/>
    <TextView
        android:id="@+id/genderd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="txt"
        android:textColor="#6E798C"
        android:layout_marginStart="20dp"
        android:textSize="14sp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:background="#21212114"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Origin"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/origind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="txt"
        android:layout_marginStart="20dp"
        android:textColor="#6E798C"
        android:textSize="14sp"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:background="#21212114"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="Type"/>
    <TextView
        android:id="@+id/typed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#6E798C"
        android:textSize="14sp"
        android:layout_marginStart="20dp"
        tools:text="txt"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:background="#21212114"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/locationtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="Location"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/locationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="#6E798C"
        android:textSize="14sp"
        tools:text="txt"
        android:layout_below="@id/locationtext"/>

    <ImageButton
        android:id="@+id/btn_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_go"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:background="#21212114"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8E8E93"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif"
        android:text="Episodes"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/episodesRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/episodes_detail" />
</LinearLayout>
</layout>