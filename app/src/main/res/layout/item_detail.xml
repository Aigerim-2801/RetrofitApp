<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".sources.ItemDetailActivity">


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/Theme.RetrofitApp.AppBarOverlay">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:toolbarId="@+id/toolbar">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#F2F2F7"
                    android:paddingBottom="15dp"
                    app:popupTheme="@style/Theme.RetrofitApp.PopupOverlay">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/background_character" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:elevation="0dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="20dp"
                            app:cardCornerRadius="100dp"
                            app:strokeColor="#F3F3F3"
                            app:strokeWidth="4dp">

                            <ImageView
                                android:id="@+id/imaged"
                                android:layout_width="130dp"
                                android:src="@drawable/ic_launcher_background"
                                android:layout_height="130dp"/>

                        </com.google.android.material.card.MaterialCardView>

                    </FrameLayout>

                    <TextView
                        android:id="@+id/statusd"
                        tools:text="Status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6E798C"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/named"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#081F32"
                        android:textSize="26sp"
                        android:layout_gravity="center_horizontal"
                        tools:text="Name"/>

                    <TextView
                        android:id="@+id/speciesd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#8E8E93"
                        android:textSize="13sp"
                        android:textAllCaps="true"
                        android:layout_gravity="center_horizontal"
                        tools:text="Species"/>

                </LinearLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <include
            android:id="@+id/contentCharacter"
            layout="@layout/content_character_detail" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>